// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    U
    {
        solver          amgcl;
        tolerance       1e-08;
        relTol          1e-03;
        
        amgcl
        {
            options
            {
                solver      bicgstab;    // 非对称矩阵求解器
                relaxation  spai0;       // 预条件器
                coarsening  smoothed_aggregation;
                maxiter     100;
                ns_search   true;        // BiCGStab 空值搜索
            }
            
            caching
            {
                matrix
                {
                    update  always;      // 速度场每次更新
                }
            }
        }
    }

    pCorr
    {
        solver          amgcl;
        tolerance       1e-08;
        relTol          0.01;
        
        amgcl
        {
            options
            {
                solver      cg;          // 对称矩阵用 CG
                relaxation  spai0;
                coarsening  smoothed_aggregation;
                maxiter     100;
            }
            
            caching
            {
                matrix
                {
                    update  periodic;
                    periodicCoeffs
                    {
                        frequency 1;
                    }
                }
            }
        }
    }

    pCorrFinal
    {
        solver          amgcl;
        tolerance       1e-15;
        relTol          0;
        
        amgcl
        {
            options
            {
                solver      cg;          // 压力校正用 CG
                relaxation  spai0;
                coarsening  smoothed_aggregation;
                maxiter     100;
                
                // AMG 参数调优
                amg
                {
                    eps_strong  0.0;
                    over_interp 1.5;
                }
            }
            
            caching
            {
                matrix
                {
                    update  periodic;
                    periodicCoeffs
                    {
                        frequency 1;
                    }
                }
            }
        }
    }

