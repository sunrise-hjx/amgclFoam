    pFinal
    {
        solver          amgcl;
        tolerance       0;
        relTol          1e-15;
        
        amgcl
        {
            options
            {
                solver      cg;          // 最终压力求解用 CG (对称)
                relaxation  spai0;       // SPAI0 预条件器
                coarsening  smoothed_aggregation;
                maxiter     100;
                
                // AMG 粗化参数
                amg
                {
                    eps_strong  0.0;     // 强连接阈值
                    over_interp 1.5;     // 过插值系数
                }
            }
            
            caching
            {
                matrix
                {
                    update  periodic;    // 周期性更新矩阵
                    periodicCoeffs
                    {
                        frequency 1;     // 每次迭代更新
                    }
                }
            }
        }
    }

